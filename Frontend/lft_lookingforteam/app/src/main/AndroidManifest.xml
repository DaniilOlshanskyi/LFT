        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".AccountRegistrationScreen" />
        <activity android:name=".AppOpeningScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProfileViewScreen" />
        <activity android:name=".ConversationScreen" />
        <activity android:name=".ReportCreateScreen" />
        <activity android:name=".LoginScreen" />
        <activity android:name=".ReportViewingScreen" />
